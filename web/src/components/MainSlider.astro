---
import Slider from "./Slider.astro"
---
<Slider>
    <div class="swiper-slide" style="background-image: url('/images/slide-1.png');" data-thumb-alt="">       
        <h3 class="slider-content">División Materiales</h3>
    </div>
  
    <div class="swiper-slide" style="background-image: url('/images/slide-2.png');" data-thumb-alt=""> 
        <h3 class="slider-content">División INDUSTRIAL</h3>
    </div>
  
    <div class="swiper-slide" style="background-image: url('/images/slide-3.png');" data-thumb-alt=""> 
        <h3 class="slider-content">División PROYECTOS </h3>
    </div>
  
</Slider>
<style>
    .slider-content {
        width: 100%;
        height: 100%;
        text-align: center;
        user-select: none;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 48px;
      color: white;
      text-transform: uppercase;
      font-family: 'AcuminPro-Bold';
    }
    .swiper-slide {
        
        width: 100%;
        height: 60vh;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    
    .swiper-pagination-bullet {
      width: 20px;
      height: 20px;
      text-align: center;
      line-height: 20px;
      font-size: 12px;
      color: #000;
      opacity: 1;
      background: rgba(0, 0, 0, 0.2);
    }

    .swiper-pagination-bullet-active {
      color: #fff;
      background: #007aff;
    }
</style>