<div class="swiper">
    <div class="swiper-wrapper">
        <slot ></slot>
    </div>
    <div class="swiper-pagination" id="swiper-pagination"></div>
  </div>
  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
  <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
  <script is:inline>
    var swiper = new Swiper(".swiper", {
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
        renderBullet: function (index, className) {
          return '<span class="' + className + ' swiper-bullet" style="background: #FFF"></span>';
        },

        },
      autoplay: {
        delay: 8000,
        },
        effect: "fade",
    });
  </script>
  <style>
    #swiper-pagination > .swiper-bullet.swiper-pagination-bullet-active {
      opacity: 1 !important;
    }
    #swiper-pagination > .swiper-bullet {
      opacity: .7 !important;
    }
    .swiper {
        height: 60vh;
    }
    .swiper-slide {
        width: 100%;
        height: 60vh;
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

  </style>